{
  "name": "@claudetools/codemap",
  "version": "1.6.0",
  "description": "Codebase intelligence CLI - fast symbol lookup, dependency tracing, and code navigation for AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    },
    "./indexer": {
      "types": "./dist/indexer/index.d.ts",
      "import": "./dist/indexer/index.js"
    },
    "./search": {
      "types": "./dist/search/index.d.ts",
      "import": "./dist/search/index.js"
    }
  },
  "bin": {
    "codemap": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "postinstall": "node dist/postinstall.js || true"
  },
  "keywords": [
    "codebase",
    "index",
    "ast",
    "tree-sitter",
    "cli",
    "code-navigation",
    "symbol-search",
    "claude",
    "ai-assistant",
    "code-intelligence",
    "developer-tools",
    "code-analysis"
  ],
  "author": "ClaudeTools",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/claudetools/codemap.git"
  },
  "bugs": {
    "url": "https://github.com/claudetools/codemap/issues"
  },
  "homepage": "https://github.com/claudetools/codemap#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "skills",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "glob": "^10.3.0",
    "ignore": "^5.3.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-typescript": "^0.21.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
